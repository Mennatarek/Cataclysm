<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mydrawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cataclysm.android.cataclysm.Content">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:layout_marginTop="0dp"
        android:layout_below="@+id/username"
        android:layout_marginLeft="70dp"
        android:textSize="17sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Image Verified"/>

    <ImageView
        android:layout_below="@+id/username"
        android:id="@+id/img"
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/dummytext"
        android:layout_below="@+id/img"
        android:layout_marginLeft="70dp"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Image Verified"/>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="dbkfbjbdj"
        android:id="@+id/location"
        android:layout_below="@+id/dummytext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:id="@+id/body"
        android:layout_below="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/heatmap"
        android:layout_below="@id/body"
        android:layout_marginTop="20dp"
        android:layout_width="300dp"
        android:layout_height="170dp"
        android:src="@drawable/koko"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>




    </LinearLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/navview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"

        android:textAlignment="center"

        app:itemIconTint="#313131"
        app:itemTextColor="#292929"
        app:menu="@menu/navdrawer_menu"


        />
</android.support.v4.widget.DrawerLayout>


